@model IEnumerable<CatalogoProduto.Models.Produto>;
@{
    ViewData["Title"] = "Produtos";
}

<div class="container my-4">
    <div class="row flex-lg-nowrap">

        <!-- Filtros -->
        <div class="col-12 col-lg-3 mb-4">
            <div class="bg-light rounded p-3 shadow-sm">
                <h5>Filtros</h5>
                <ul class="list-unstyled">
                    <li><a asp-action="Index" asp-route-categoria="">Todos os Produtos</a></li>
                    <li><a asp-action="Index" asp-route-categoria="Smartphone">Smartphone</a></li>
                    <li><a asp-action="Index" asp-route-categoria="Notebook">Notebook</a></li>
                    <li><a asp-action="Index" asp-route-categoria="Smartwatch">Smartwatch</a></li>

                </ul>
            </div>
        </div>

        <!-- Catálogo -->
        <div class="col">
            <div class="d-flex flex-wrap justify-content-start gap-4">
                @foreach (var produto in Model)
                {
                    <div class="card produto-card shadow-sm" style="width: 18rem;">
                        <img src="@produto.ImagemUrl" class="card-img-top" alt="@produto.Nome">
                        <div class="card-body">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-text text-secondary">@produto.Categoria</p>
                            <p class="card-text text-primary fw-bold">R$ @produto.Preco</p>
                            <a href="#" class="btn btn-primary">Detalhes</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
